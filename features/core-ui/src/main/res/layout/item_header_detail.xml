<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.space.shared.util.Formatter"/>

        <variable
            name="detail"
            type="com.space.shared.data.notice_bible.NoticeDetail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.detail.NoticeDetailFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{detail.title}"
            android:textColor="@color/blackTitle"
            android:textSize="@dimen/title_text2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text='@{Formatter.formatToDate(detail.reg_date) + " | " + detail.name}' />

    </LinearLayout>
</layout>