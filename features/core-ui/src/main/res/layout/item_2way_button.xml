<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.space.shared.type.LayoutType" />

        <variable
            name="buttonTitle"
            type="String" />

        <variable
            name="cancelButtonHandler"
            type="com.space.core_ui.NonParamsItemHandler" />

        <variable
            name="nextButtonHandler"
            type="com.space.core_ui.NonParamsItemHandler" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.space.core_ui.view.SpaceRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layoutType="@{LayoutType.VERTICAL}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="1">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/grayTextColor"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <com.space.core_ui.view.SpaceLoginCardViewText
                        android:onClick="@{()->cancelButtonHandler.onClick()}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="취소" />
                </androidx.cardview.widget.CardView>


                <com.space.core_ui.view.SpaceLoginCardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">

                    <com.space.core_ui.view.SpaceLoginCardViewText
                        android:onClick="@{()->nextButtonHandler.onClick()}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="계속하기" />
                </com.space.core_ui.view.SpaceLoginCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</layout>
