<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="50dp"
      android:layout_gravity="center"
      android:contentDescription="@string/Login_image"
      android:scaleType="center"
      app:srcCompat="@drawable/ig_intranet_info_vector" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="bottom|center"
      android:orientation="vertical"
      tools:context=".ui.intranet.intranetInfo.IntranetInfoFragment">

      <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인트라넷 로그인"
        android:textAlignment="center"
        android:textColor="@color/blackTitle"
        android:textSize="@dimen/title_text2" />

      <TextView
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="한국성서대학교 인트라넷 로그인이 필요합니다.\n학생임을 확인하는 절차로 학번을 서버로부터 조회및 저장합니다.\n로그인 정보는 어디에든 저장되지 않으며\n한번 로그인하면 그 이상 로그인을 하지않습니다"
        android:textAlignment="center"
        android:textColor="@color/blackTitle"
        android:textSize="@dimen/main_text3" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_gravity="bottom"
        android:columnCount="2">

        <TextView
          android:id="@+id/login_later"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="나중에"
          android:textAlignment="center"
          android:textSize="@dimen/main_text3" />

        <androidx.cardview.widget.CardView
          android:id="@+id/login_button"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:layout_weight="1"
          app:cardBackgroundColor="@color/greenBackground"
          app:cardCornerRadius="10dp"
          app:cardElevation="0dp">

          <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_text"
            android:textColor="@color/white"
            android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
      </LinearLayout>
    </LinearLayout>

  </FrameLayout>
</layout>
